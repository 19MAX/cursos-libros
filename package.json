{
  "name": "libros-cursos",
  "version": "1.0.0",
  "description": "## What is CodeIgniter?",
  "main": "index.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "build-css": "tailwindcss -i ./public/css/src/input.css -o ./public/css/output.css --watch",
    "build-production": "tailwindcss -i ./public/css/src/input.css -o ./public/css/output.css --minify",
    "copy-flowbite": "cp node_modules/flowbite/dist/flowbite.min.js public/js/",
    "copy-datatables": "cp node_modules/simple-datatables/dist/umd/simple-datatables.js public/js/datatables/",
    "copy-datatables-css": "cp node_modules/simple-datatables/dist/style.css public/css/datatables",
    "copy-all": "npm run copy-flowbite && npm run copy-datatables && npm run copy-datatables-css"

  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/19MAX/cursos-libros.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/19MAX/cursos-libros/issues"
  },
  "homepage": "https://github.com/19MAX/cursos-libros#readme",
  "dependencies": {
    "@tailwindcss/cli": "^4.1.11",
    "flowbite": "^3.1.2",
    "simple-datatables": "^10.0.0",
    "tailwindcss": "^4.1.11"
  }
}
